@model IEnumerable<PROJ_SW.Model.Inventory>

@{
    ViewBag.Title = "Inventory";
}
    <style>
        .data {
            font-family: 'Times New Roman', Times, serif;
            font-size: larger;
            font-weight: bolder
        }

        .header-table {
            color: darkblue;
            font-size: x-large;
            font-family: 'Times New Roman', Times, serif
        }

        h1 {
            font-weight: 900;
            color: midnightblue
        }
    </style>
<h1 style="margin-top:50px;text-align:center">Inventory</h1>

<p>

    <a href="@Url.Action("Create","Inventories")" class="btn btn-primary" target="_blank">
        <span class="glyphicon glyphicon-plus"> </span>
        Create
    </a>


</p>
<table class="table">
    <tr class="header-table">
        <th>
            @Html.DisplayNameFor(model => model.inventory_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="data">
            <td>
                @Html.DisplayFor(modelItem => item.inventory_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a href="@Url.Action("Edit","Inventories", new { id=item.inventory_id })" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok"> Edit</span>
                </a>

                <a href="@Url.Action("Details","Inventories", new { id=item.inventory_id })" class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil"> Details</span>
                </a>


                <a href="@Url.Action("Delete","Inventories", new { id=item.inventory_id })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"> Delete</span>

                </a>
            </td>
        </tr>
    }

</table>
