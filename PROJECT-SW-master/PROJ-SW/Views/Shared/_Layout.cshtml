<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/footer.css" type="text/css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" type="text/css" rel="stylesheet" />
    <style>
        .wrapper {
            position: absolute;
            /*background: rgba(0, 0, 0,0.4);*/
            max-width: 550px;
            width: 100%;
            height: 30px;
            margin-top: 8px;
            margin-left: 550px;
            display: flex;
            justify-content: space-between;
            border-radius: 5px;
            color: #3498db;
        }

            .wrapper .input {
                width: 85%;
                padding: 15px 20px;
                border: none;
                border-radius: 5px;
                font-weight: bold;
                color: #3498db;
            }

        .searchbtn {
            margin-top: 0px;
            display: flex;
            top: 0px;
        }

            .searchbtn .fas {
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"S></span>
                </button>
                <div class="searchbtn"><img src="~/Images/logo.jpg" style="height:40px; width:70px;" /></div>

                @Html.ActionLink("LIFESERVE", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "User")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Blog", "Artical", "Home")</li>
                    <li>@Html.ActionLink("Cart", "Cart", "Home")</li>
                    <li>@Html.ActionLink("LogIn/SingUp", "Login", "Account")</li>
                    <li>@Html.ActionLink("LogOut", "Login", "Account")</li>
                </ul>
                <div class="wrapper">
                    <input type="text" class="input"
                           placeholder="What are you looking for?">

                </div>
            </div>
        </div>
    </div>


        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="footer-distributed">

                <div class="footer-left">
                    <img src="~/Images/pharmacy.png">
                    <h3>Lif<span>eS</span>erve<span>Phar</span>macy</h3>

                    <p class="footer-links">
                        <a href="#">Home</a>
                        |
                        <a href="#">Blog</a>
                        |
                        <a href="#">About</a>
                        |
                        <a href="#">Contact</a>
                    </p>

                    <p class="footer-company-name" style="color: white;">© 2020 Medical Serviving Patients .</p>
                </div>

                <div class="footer-center">
                    <div>
                        <i class="fa fa-map-marker"></i>
                        <p>
                            <span style="margin-left: 50px;">
                                shop online
                                select all what you need from the pharmacy through our online store on web or on mobile app.
                            </span>

                        </p>
                    </div>

                    <div>
                        <i class="fa fa-phone"></i>
                        <p>222222222222</p>
                    </div>
                    <div>
                        <i class="fa fa-envelope"></i>
                        <p><a href="mailto:support@eduonix.com">lifeservepharmacy@gmail.com</a></p>
                    </div>
                </div>
                <div class="footer-right">
                    <p class="footer-company-about" style="color: white;">
                        <span>About the Pharmacy</span>
                        We offer Blood pressure, sugar, and weight for free.
                    </p>
                    <div class="footer-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
