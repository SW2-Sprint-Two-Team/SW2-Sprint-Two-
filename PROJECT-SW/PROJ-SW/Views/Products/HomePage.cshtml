@model IEnumerable<PROJ_SW.Model.Product>

@{
    ViewBag.Title = "HomePage";
}


<style>

    .thumbnail:hover {
        box-shadow: 0 5px 10px rgba(0,0,0,0.5);
        transform: scale(0.95);
        transition: 0.5s;
    }
</style>

<br />
<br />

<h2 style="color: #3498db; font-weight: lighter; border-bottom: 4px solid #3498db; text-transform: uppercase; font-size: 20px; font-weight: bold; text-align: center; ">PRODUCTS</h2>
<br />
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-xl-4 col-md-6 col-lg-4">
            <div class="single_department">
                <div class="department_thumb">
                    <a href="@Url.Action("viewProductUSER","Products", new { id=item.prod_id} )" class="thumbnail">
                        <img src="@Url.Content(item.Prod_Image)">
                    </a>
                </div>
                <div class="department_content">
                    <h2 style="color:black">
                        @item.prod_name
                    </h2>
                    <h3 style="color:purple">
                        @item.Price EPG
                    </h3>


                </div>
                <div class="department_content">
                    <p>
                        <a href="@Url.Action("viewProductUSER","Products", new { id=item.prod_id} )" class="btn btn-success" target="_blank" style="margin-left:30px">
                            <span class="glyphicon glyphicon-camera"> More Info</span>
                        </a>
                        <a href="@Url.Action("viewProductUSER","Products", new { id=item.prod_id} )" class="btn btn-primary" target="_blank" style="margin-left:100px">
                            <span class="glyphicon glyphicon-shopping-cart"> </span>
                        </a>

                    </p>
                </div>

            </div>
        </div>
    }

</div>


