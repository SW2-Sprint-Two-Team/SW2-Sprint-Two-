        <style>

            .rating {
                display: inline-block;
                height: 60px;
                line-height: 50px;
                font-size: 25px;
                margin-top: 80px;
            }

                .rating label {
                    position: absolute;
                    top: 0;
                    left: 0;
                    height: 100%;
                    cursor: pointer;
                    margin-left: -120px;
                    margin-bottom: -50px;
                }

                    .rating label:last-child {
                        position: static;
                    }

                    .rating label:nth-child(1) {
                        z-index: 5;
                    }

                    .rating label:nth-child(2) {
                        z-index: 4;
                    }

                    .rating label:nth-child(3) {
                        z-index: 3;
                    }

                    .rating label:nth-child(4) {
                        z-index: 2;
                    }

                    .rating label:nth-child(5) {
                        z-index: 1;
                    }

                    .rating label input {
                        position: absolute;
                        top: 0;
                        left: 0;
                        opacity: 0;
                    }

                    .rating label .icon {
                        float: left;
                        color: transparent;
                        font-size: 25px;
                        margin-top: -30px;
                    }

                    .rating label:last-child .icon {
                        color: gray;
                    }

                .rating:not(:hover) label input:checked ~ .icon,
                .rating:hover label:hover input ~ .icon {
                    color: #79f;
                }

                .rating label input:focus:not(:checked) ~ .icon:last-child {
                    color: #000;
                    text-shadow: 0 0 5px #09f;
                }

            .button {
                background-color: dodgerblue;
                border: none;
                color: white;
                padding: 16px 32px;
                text-align: center;
                font-size: 18px;
